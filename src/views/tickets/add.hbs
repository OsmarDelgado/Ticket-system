<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/tickets/add" method="POST">
                        <div class="form-group">
                            <input type="date" name="fecha_creacion" class="form-control" format="dd-mm-yyyy">
                        </div>
                        <div class="form-group">
                            <input type="number" step="0.01" class="form-control" name="monto_carga"
                                placeholder="Cantidad a cargar" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="number" step="0.001" class="form-control" name="litros_cargados"
                                placeholder="Litros cargados">
                        </div>
                        <div class="form-group">
                            <input type="number" step="0.01" class="form-control" name="precio_litro"
                                placeholder="Precio por litro">
                        </div>
                        <div class="form-group">
                            <textarea name="observaciones" rows="2" class="form-control"
                                placeholder="Observaciones"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>